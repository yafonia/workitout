<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DetailsFragment">

    <TextView
        android:id="@+id/take_exercise"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/take_exercise"
        android:layout_marginTop="150dp"
        android:layout_marginBottom="80dp"
        android:layout_marginLeft="120dp"
        android:layout_centerVertical="true"
        android:gravity="center"
        android:textSize="60sp"
        android:textColor="@android:color/black"
        android:layout_centerHorizontal="true"
         />

    <Button
        android:id="@+id/start_exercise"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/take_exercise"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:textSize="25dp"
        android:text="@string/start_exercise" />

    <Button
        android:id="@+id/add_to_calendar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/start_exercise"
        android:layout_marginStart="11dp"
        android:textSize="25dp"
        android:layout_centerHorizontal="true"
        android:text="@string/add_to_calendar"
        />


</RelativeLayout>